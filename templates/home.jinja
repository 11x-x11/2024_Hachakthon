{% extends "base.jinja" %}

{% block title %}Home{% endblock %}

{% block content %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap');
        
        body {
            font-family: 'Ubuntu', sans-serif;
            background-color: #ffffff; /* Set the background to white */
            color: #aa3953; /* Font color */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-weight: 500;
            position: relative;
        }
        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 48px; /* Increase the size of the logo text */
            font-weight: 700;
            color: #aa3953; /* Font color for the logo */
            font-family: 'Ubuntu', sans-serif;
            z-index: 2; /* Ensure the logo is above other elements */
        }
        .nav-tabs {
            position: absolute;
            top: 80px; /* Positioning below the logo */
            left: 20px;
            display: flex;
            gap: 20px; /* Spacing between tabs */
            z-index: 2; /* Ensure the tabs are above other elements */
        }
        .nav-tabs a {
            font-family: 'Ubuntu', sans-serif;
            font-weight: 700;
            color: rgba(172, 215, 205, 1); /* Font color for the tabs */
            text-decoration: none;
            padding: 10px 20px;
            background-color: rgba(255, 255, 255, 0.7); /* Background color with 70% opacity */
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            cursor: default; /* Indicates that the tab is not clickable */
        }
        .nav-tabs a:hover {
            background-color: #aa3953; /* Background color on hover */
            color: #fff; /* Text color on hover */
        }
        .content-box {
            background-color: rgba(255, 255, 255, 0.7); /* White background with 70% opacity */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            text-align: center;
            position: relative;
            z-index: 1; /* Ensure content is above the overlay */
        }
        h2 {
            color: #aa3953; /* Font color */
            font-family: 'Ubuntu', sans-serif;
            font-weight: 700;
            margin-bottom: 20px;
        }
        p {
            font-family: 'Ubuntu', sans-serif;
            color: #aa3953; /* Font color */
            font-weight: 500;
        }
        .bottom-image {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: auto;
            max-width: 100%;
            height: auto;
            max-height: 25%; /* Adjust this to control the height of the image */
            z-index: 0;
        }
    </style>

    <!-- Add the text logo at the top-left corner -->
    <div class="logo">Swap</div>

    <!-- Navigation Tabs -->
    <div class="nav-tabs">
        <a href="javascript:void(0)">Home</a>
        <a href="javascript:void(0)">Skills</a>
        <a href="javascript:void(0)">Chat</a>
        <a href="javascript:void(0)">Board</a>
        <a href="javascript:void(0)">Friends</a>
    </div>

    <div class="content-box">
        <h2>Welcome, {{ username }}!</h2>
        <p>This is your personal home page.</p>
        <a href="{{ url_for('logout') }}">Logout</a>
    </div>

    <!-- Add the image at the bottom-center -->
    <img src="{{ url_for('static', filename='images/bg-cartoon.jpg') }}" alt="Cartoon Background" class="bottom-image">
{% endblock %}
