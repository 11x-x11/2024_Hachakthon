{% extends "base.jinja" %}

{% block title %}Sign Up{% endblock %}

{% block content %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&display=swap');
        
        body {
            font-family: 'Ubuntu', sans-serif;
            background-color: #ffffff; /* Set the background to white */
            color: #aa3953; /* Font color */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-weight: 500;
            position: relative;
        }
        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 48px; /* Increase the size of the logo text */
            font-weight: 700;
            color: #aa3953; /* Font color for the logo */
            font-family: 'Ubuntu', sans-serif;
            z-index: 2; /* Ensure the logo is above other elements */
        }
        .content-box {
            background-color: rgba(255, 255, 255, 0.7); /* White background with 70% opacity */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
            position: relative;
            z-index: 1; /* Ensure content is above the overlay */
            margin: auto;
        }
        h2 {
            color: #aa3953; /* Font color */
            font-family: 'Ubuntu', sans-serif;
            font-weight: 700;
            margin-bottom: 20px;
        }
        form {
            background-color: rgba(172, 215, 205, 0.8); /* Background color for the Sign Up box with 80% opacity */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 100%;
            width: 100%;
            font-family: 'Ubuntu', sans-serif;
            box-sizing: border-box;
            font-weight: 500;
        }
        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-family: 'Ubuntu', sans-serif;
            box-sizing: border-box;
            color: #aa3953; /* Font color */
            font-weight: 500;
        }
        input[type="submit"] {
            background-color: #aa3953;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            width: 100%;
            font-family: 'Ubuntu', sans-serif;
            box-sizing: border-box;
            font-weight: 700;
        }
        input[type="submit"]:hover {
            background-color: #333;
        }
        p {
            text-align: center;
            margin-top: 10px;
            font-family: 'Ubuntu', sans-serif;
            color: #aa3953; /* Font color */
            font-weight: 500;
        }
        a {
            color: #aa3953; /* Font color */
            text-decoration: none;
            font-weight: 700; 
        }
        a:hover {
            text-decoration: underline;
        }
        .bottom-image {
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: auto;
            max-width: 100%;
            height: auto;
            max-height: 25%; /* Adjust this to control the height of the image */
            z-index: 0;
        }
    </style>

    <!-- Add the text logo at the top-left corner -->
    <div class="logo">SkillSync</div>

    <div class="content-box">
        <h2>Sign Up</h2>
        <form action="{{ url_for('signup_user') }}" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="submit" value="Sign Up">
        </form>
        <p>Already have an account? <a href="{{ url_for('login') }}">Login</a></p>
    </div>

    <!-- Add the image at the bottom-center -->
    <img src="{{ url_for('static', filename='images/bg-cartoon.jpg') }}" alt="Cartoon Background" class="bottom-image">
{% endblock %}
